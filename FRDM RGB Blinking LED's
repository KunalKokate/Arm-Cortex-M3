#include "mbed.h"

DigitalOut gpo(D0);
DigitalOut myLed1(LED_RED);
DigitalOut myLed2(LED_GREEN);
DigitalOut myLed3(LED_BLUE);

int main()
{
    while (1) {
        myLed1 = 0;
        wait(1);
        myLed1 = 1;
        
        wait(1);
        myLed2 = 0;
        wait(1);
        myLed2 = 1;
        wait(1);
        myLed3 = 0;
        wait(1);
        myLed3 = 1;
        wait(1);        
    }
}

#include "mbed.h"
BusOut myled(LED1,LED2,LED3);
int main() {
    while(1) {
        myled = 0x06;
        wait(1);
        myled = 0x07;
        wait(1);
        myled = 0x05;
        wait(1);
        myled = 0x07;
        wait(1);
        myled = 0x03;
        wait(1);
        myled = 0x07;
        wait(1);
        
        myled = 0x02;
        wait(1);
        myled = 0x07;
        wait(1);
        myled = 0x01;
        wait(1);
        myled = 0x07;
        wait(1);
        myled = 0x04;
        wait(1);
        myled = 0x07;
        wait(1);
    }
}
